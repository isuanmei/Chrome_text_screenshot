{
  "manifest_version": 3,
  "name": "酸梅的截屏生成器",
  "version": "1.0.0",
  "description": "将网页中选中的文字内容转换为精美的长图片",
  "permissions": [
    "activeTab",
    "clipboardRead"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}